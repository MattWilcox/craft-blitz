{% import "_includes/forms" as forms %}

{{ driverHtml|raw }}

{% set icons = {
    'refresh-urls': '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M7.5 3.75H6A2.25 2.25 0 003.75 6v1.5M16.5 3.75H18A2.25 2.25 0 0120.25 6v1.5m0 9V18A2.25 2.25 0 0118 20.25h-1.5m-9 0H6A2.25 2.25 0 013.75 18v-1.5M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>',
    'refresh-site': '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m6 4.125l2.25 2.25m0 0l2.25 2.25M12 13.875l2.25-2.25M12 13.875l-2.25 2.25M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" /></svg>',
    'refresh': '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" /></svg>',
} %}
{% set rows = [] %}
{% for action in actions %}
    <div class="action">
        <div class="padded" onclick="$(this).parent().find('.form').toggleClass('hidden');">
            <span class="icon">{{ icons[action.id]|raw }}</span>
            {{ action.instructions }}
        </div>
        <div class="form hidden">
            <div class="padded">
                <form method="post" accept-charset="UTF-8">
                    <input type="hidden" name="action" value="blitz/cache/{{ action.id }}">
                    <input type="hidden" name="utility" value="1">
                    {{ csrfInput() }}

                    {% if action.id == 'refresh-urls' %}
                        {{ forms.editableTableField({
                            name: 'urls',
                            id: 'urls',
                            cols: [{
                                type: 'singleline',
                                heading: 'URLs'|t('blitz'),
                                placeholder: siteUrl('page'),
                                info: 'The `*` wildcard is supported.'|t('blitz'),
                                code: true,
                            }],
                            addRowLabel: "Add a URL"|t('blitz'),
                            allowAdd: true,
                            allowDelete: true,
                            allowReorder: true,
                            first: true,
                        }) }}
                    {% elseif action.id == 'refresh-site' %}
                        {{ forms.selectField({
                            name: 'siteId',
                            id: 'siteId',
                            class: 'fullwidth',
                            options: action.options,
                            first: true,
                        }) }}
                    {% endif %}

                    <input type="submit" class="btn submit fullwidth" value="{{ action.label }}">
                </form>
            </div>
        </div>
    </div>
{% endfor %}
