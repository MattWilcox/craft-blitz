{% macro configWarning(setting) -%}
    {{ 'This is being overridden by the `{setting}` config setting.'|t('blitz', {setting: setting })|markdown(inlineOnly=true) }}
{%- endmacro %}


{% macro configFieldWarning(setting) -%}
    <div class="field">
        <p class="warning">
            {{ 'These settings are being overridden by the `{setting}` config setting.'|t('blitz', {setting: setting })|markdown(inlineOnly=true) }}
        </p>
    </div>
{%- endmacro %}
